@model List<VentaProductos.Models.Producto>

@{
    ViewBag.Title = "VerProductos";
}

<h2>Lista Productos</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Codigo Producto</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Saldo del Inventario</th>
      <th scope="col">Fecha de Ingreso</th>
      <th scope="col">Usuario Ingreso</th>
      <th scope="col">ID Familia</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var producto in Model)
    {
        <tr>
          <th scope="row">@producto.CodigoProducto</th>
          <td>@producto.Descripcion</td>
          <td>@producto.Precio</td>
          <td>@producto.SaldoInventario</td>
          <td>@producto.FechaIngreso</td>
          <td>@producto.UsuarioIngreso</td>
          <td>@producto.IDFamilia</td>
          <td>
            <div class="d-flex">
                <form method="post">
                    <input asp-action="BorrarProducto" asp-route-codigoProducto="@producto.CodigoProducto" type="submit" class="btn btn-danger" value="Borrar"/>
                </form>
                <a asp-action="EditarProducto" asp-route-codigoProducto="@producto.CodigoProducto" class="btn btn-primary ms-2">Editar</a>
            </div>
          </td>
        </tr>
    }
  </tbody>
</table>

<a href="/Home/Index" class="btn btn-primary my-2">Regresar</a>