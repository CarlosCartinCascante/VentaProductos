@{
    ViewBag.Title = "EditarProducto";
}

<h2>Editar Producto</h2>

<form method="post" action="EditarProducto">
    @{
        Producto producto = ViewBag.productoAntiguo;
        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción del producto</label>
            <textarea class="form-control" asp-for="@producto.Descripcion" name="descripcion" rows="3">@producto.Descripcion</textarea>
            <span asp-validation-for="@producto.Descripcion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="precio" class="form-label">Precio del producto</label>
            <input asp-for="@producto.Precio" name="precio" class="form-control" placeholder="Use coma como separador para valores decimales: 12,53">
            <span asp-validation-for="@producto.Precio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="saldoInventario" class="form-label">Saldo del inventario</label>
            <input asp-for="@producto.SaldoInventario" name="saldoInventario" class="form-control" placeholder="Use coma como separador para valores decimales: 12,53">
            <span asp-validation-for="@producto.SaldoInventario" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="usuarioIngreso" class="form-label">Usuario que crea el producto</label>
            <input asp-for="@producto.UsuarioIngreso" class="form-control" name="usuarioIngreso">
            <span asp-validation-for="@producto.UsuarioIngreso" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="idFamilia" class="form-label">ID de la familia del producto</label>
            <input asp-for="@producto.IDFamilia" min="1" class="form-control"  name="idFamilia">
            <span asp-validation-for="@producto.IDFamilia" class="text-danger"></span>
        </div>
        <div class="d-flex mb-3">
            <input type="submit" class="btn btn-success me-4" value="Editar">
            <a href="/VentaProductos/VerProductos" class="btn btn-secondary">Regresar</a>
        </div>
    }
</form>

