@{
    ViewBag.Title = "CrearFamiliaProducto";
}

<h2>Editar Familia de Productos</h2>

<form method="post" action="EditarFamiliaProducto">
    @{
        FamiliaProducto familiaProducto = ViewBag.familiaProductoAntigua;
        <div class="mb-3">
            <label for="nombreFamilia" class="form-label">Nombre Familia de Productos</label>
            <input asp-for="@familiaProducto.NombreFamilia" name="nombreFamilia" class="form-control">
            <span asp-validation-for="@familiaProducto.NombreFamilia" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="usuarioIngreso" class="form-label">Nombre usuario que crea el producto</label>
            <input asp-for="@familiaProducto.UsuarioIngreso" name="usuarioIngreso" class="form-control">
            <span asp-validation-for="@familiaProducto.UsuarioIngreso" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="estado" class="form-label">Estado del producto</label>
            <input asp-for="@familiaProducto.Estado" min="1"  class="form-control" name="estado">
            <span asp-validation-for="@familiaProducto.Estado" class="text-danger"></span>
        </div>
        <div class="d-flex mb-3">
            <input type="submit" class="btn btn-success me-4" value="Editar">
            <a href="/VentaProductos/VerFamiliaProducto" class="btn btn-secondary">Regresar</a>
        </div>
    }
</form>
